{
  "permissions": {
    "allow": [
      "Bash(uv:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(pytest:*)",
      "Bash(mypy:*)",
      "Bash(ruff:*)",
      "Read(**/*.py)",
      "Read(**/*.md)",
      "Read(**/*.toml)",
      "Read(**/*.txt)",
      "Read(**/*.json)",
      "Read(**/*.yaml)",
      "Read(**/*.yml)",
      "Read(.env.example)",
      "Read(tests/**/*)",
      "Read(pyproject.toml)",
      "Read(uv.lock)",
      "Read(.gitignore)",
      "Write(**/*.py)",
      "Write(**/*.md)",
      "Write(**/*.toml)",
      "Write(**/*.json)",
      "Write(tests/**/*)",
      "Write(pyproject.toml)",
      "Write(uv.lock)"
    ],
    "deny": [
      "Read(.env)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/secrets/**)",
      "Read(**/.git/**)",
      "Write(.env)",
      "Write(**/*.key)",
      "Write(**/*.pem)",
      "Write(**/secrets/**)",
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ]
  },
  "workflow": {
    "beforeTask": [
      "git checkout main || git checkout master",
      "git pull origin main || git pull origin master",
      "git checkout -b feature/${TASK_NAME}"
    ],
    "beforeCommit": [
      "uv tool run ruff check .",
      "uv tool run ruff format .",
      "uv tool run mypy ."
    ],
    "beforePR": [
      "uv tool run ruff check .",
      "uv tool run ruff format .",
      "uv tool run mypy .",
      "uv run pytest"
    ],
    "afterPR": [
      "gh pr view --web"
    ]
  },
  "conventions": {
    "branchNaming": "feature|fix|docs|test|refactor|chore",
    "commitMessage": "conventional",
    "requireTypeAnnotations": true,
    "requireTests": true,
    "requireSelfReview": true
  }
}